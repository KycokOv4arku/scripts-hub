{
  "manifest_version": 3,
  "name": "Copy Raw GitHub",
  "description": "Quickly copy the raw content of any GitHub file to your clipboard via the context menu. LLM-generated by Gemini3-pro",
  "version": "1.0",
  "permissions": ["contextMenus", "scripting", "activeTab"],
  "host_permissions": [
    "https://github.com/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
